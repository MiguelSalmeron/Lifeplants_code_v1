rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES DE AYUDA ---

    // Verifica si el usuario actual existe en la colección 'admins'
    // Esto reemplaza la lista de emails "hardcoded"
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Verifica si el usuario actual es el dueño del documento (por ID)
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- REGLAS DE COLECCIONES ---

    // Plantas: Todo el mundo lee, solo admins editan
    match /plants/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Campañas: Todo el mundo lee, solo admins editan
    match /campaigns/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Foros: Todo el mundo lee, solo admins crean temas (si esa es la lógica deseada)
    // NOTA: Si quieres que los usuarios creen temas, cambia el write a: if request.auth != null;
    match /forums/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Comunidades: Todo el mundo lee, solo admins administran
    match /communities/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Perfiles de usuario: Público lee, Dueño o Admin editan
    match /userProfiles/{userId} {
      allow read: if true;
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // Configuración de la App (appData): 
    // CORREGIDO: Antes cualquiera podía escribir, ahora solo admins.
    match /appData/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Colección de Administradores (NUEVA):
    // Nadie puede crear admins desde la web (write: false). 
    // Solo se pueden crear manualmente desde la Consola de Firebase.
    match /admins/{userId} {
      allow read: if isOwner(userId); // Un admin puede leer su propio doc para confirmar rol
      allow write: if false; 
    }
  }
}