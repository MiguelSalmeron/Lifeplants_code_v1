rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Función: ¿Es uno de los 3 admins?
    function isAdmin() {
      return request.auth != null && 
             (request.auth.token.email == "miguel.salmeron.dev@gmail.com" || 
              request.auth.token.email == "anasofiapg10@gmail.com" ||
              request.auth.token.email == "smsg23112008@gmail.com"); 
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Reglas para Plantas y Campañas (Solo Admins editan)
    match /plants/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /campaigns/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /forums/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /communities/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Perfiles de usuario
    match /userProfiles/{userId} {
      allow read: if true;
      allow write: if isOwner(userId) || isAdmin();
    }
    
    match /appData/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}