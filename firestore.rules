rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES DE AYUDA ---

    // Verifica si el usuario actual existe en la colección 'admins'
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Verifica si el usuario actual es el dueño del documento (por ID)
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Verifica si el usuario está autenticado (tiene cuenta y ha iniciado sesión)
    function isAuthenticated() {
      return request.auth != null;
    }

    // --- REGLAS DE COLECCIONES ---

    // Plantas: Todo el mundo lee, solo admins editan
    match /plants/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Campañas: Todo el mundo lee, solo admins editan
    match /campaigns/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Foros: Todo el mundo lee.
    match /forums/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Comunidades: Todo el mundo lee, solo admins administran
    match /communities/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Perfiles de usuario: 
    // CORREGIDO: Solo usuarios registrados pueden ver perfiles (Privacidad).
    // Solo el dueño o un admin pueden editar.
    match /userProfiles/{userId} {
      allow read: if isAuthenticated(); 
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // Configuración de la App (appData): Solo admins escriben.
    match /appData/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Colección de Administradores:
    // Solo el propio admin puede leer su documento para verificar permisos.
    // Nadie puede escribir aquí desde la web (solo desde consola Firebase).
    match /admins/{userId} {
      allow read: if isOwner(userId);
      allow write: if false;
    }
  }
}