rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // --- FUNCIONES DE SEGURIDAD ---
    
    // CORREGIDO: Verifica si el usuario es administrador consultando la base de datos Firestore.
    // Ya no es necesario editar este archivo para agregar nuevos admins; solo agrégalos a la colección 'admins' en Firestore.
    function isAdmin() {
      return request.auth != null && 
             firestore.exists(/databases/(default)/documents/admins/$(request.auth.uid));
    }

    // Verifica si el usuario es dueño de su propia carpeta (para fotos de perfil)
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- REGLAS POR CARPETA ---

    // 1. Imágenes de Plantas
    // Lectura pública, escritura solo admins.
    match /plants/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // 2. Imágenes de Perfil de Usuarios
    // Lectura pública, escritura solo el dueño.
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
    
    // 3. Bloqueo por defecto
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}