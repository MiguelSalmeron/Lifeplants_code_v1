rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // --- FUNCIONES DE SEGURIDAD ---
    
    // Verifica si el usuario es uno de los administradores autorizados.
    // NOTA: Si añades un nuevo admin, debes agregarlo aquí y desplegar las reglas de nuevo.
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == "miguel.salmeron.dev@gmail.com" || 
        request.auth.token.email == "anasofiapg10@gmail.com" ||
        request.auth.token.email == "smsg23112008@gmail.com"
      );
    }

    // Verifica si el usuario es dueño de su propia carpeta (para fotos de perfil)
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- REGLAS POR CARPETA ---

    // 1. Imágenes de Plantas
    // Lectura pública, escritura solo admins.
    match /plants/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // 2. Imágenes de Perfil de Usuarios
    // Lectura pública, escritura solo el dueño.
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
    
    // 3. Bloqueo por defecto
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}